{
  "enable_plugin": {
    "description": "启用插件",
    "type": "bool",
    "hint": "关闭后将不处理任何 LLM 输出",
    "default": true
  },
  "enable_logging": {
    "description": "启用详细日志",
    "type": "bool",
    "hint": "在控制台显示每次过滤的详细信息",
    "default": true
  },
  "remove_think_tag": {
    "description": "【预设】移除 <think></think> 思考标签",
    "type": "bool",
    "hint": "适用于 DeepSeek 等模型的思考过程标签",
    "obvious_hint": true,
    "default": false
  },
  "remove_markdown_bold": {
    "description": "【预设】移除 Markdown 粗体 **text**",
    "type": "bool",
    "hint": "将 **文字** 转换为 文字",
    "default": false
  },
  "remove_markdown_italic": {
    "description": "【预设】移除 Markdown 斜体 *text*",
    "type": "bool",
    "default": false
  },
  "remove_markdown_code_block": {
    "description": "【预设】移除 Markdown 代码块 ```code```",
    "type": "bool",
    "default": false
  },
  "remove_markdown_inline_code": {
    "description": "【预设】移除 Markdown 行内代码 `code`",
    "type": "bool",
    "default": false
  },
  "remove_markdown_headers": {
    "description": "【预设】移除 Markdown 标题 # ## ###",
    "type": "bool",
    "default": false
  },
  "remove_markdown_links": {
    "description": "【预设】移除 Markdown 链接 [text](url)",
    "type": "bool",
    "default": false
  },
  "remove_markdown_quotes": {
    "description": "【预设】移除 Markdown 引用 > quote",
    "type": "bool",
    "default": false
  },
  "remove_markdown_lists": {
    "description": "【预设】移除 Markdown 列表标记 - *",
    "type": "bool",
    "default": false
  },
  "remove_all_html_tags": {
    "description": "【预设】移除所有 HTML 标签",
    "type": "bool",
    "default": false
  },
  "custom_rules": {
    "description": "自定义正则规则列表",
    "type": "list",
    "hint": "点击“添加项目”可增加无限多条规则",
    "item_schema": {
      "enabled": {
        "description": "启用此规则",
        "type": "bool",
        "default": true
      },
      "name": {
        "description": "规则名称",
        "type": "string",
        "default": "新自定义规则"
      },
      "pattern": {
        "description": "正则表达式",
        "type": "string",
        "hint": "要匹配的正则表达式",
        "obvious_hint": true,
        "default": ""
      },
      "replacement": {
        "description": "替换内容",
        "type": "string",
        "hint": "替换为的内容，留空表示删除，支持 $1 等捕获组",
        "default": ""
      },
      "flags": {
        "description": "正则标志",
        "type": "string",
        "hint": "i=忽略大小写, m=多行, s=点号匹配换行",
        "default": ""
      }
    },
    "default": []
  }
}
